
       <article class="card">
         <header>
           <h2><%= thing.name %></h2>
           <h3>#<%= thing.id %></h3>
         </header>
         <section>
            <p class="bio">
              "<%= thing.description %>"
            </p>
            <h4>// Status_Check</h4>
            <ul>
               <li>ID: <%= thing.id %></li>
               <li>Status: <%= thing.active ? "Active" : "Inactive" %></li>
            </ul>
            <br>
            <a href="/things" style="color: var(--brand-accent); text-decoration: none; font-family: var(--font-code);">&larr; Return_To_Inventory</a>
         </section>
       </article>
    